generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int           @id @default(autoincrement())
  username        String        
  password        String    
  email           String        @unique
  userPhrases     UserPhrase[]        
  texts           Text[]    
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Phrase {
  id            Int           @id @default(autoincrement())
  category      String
  content       String        @unique
  meaning       String
  example       String
  shortExample  String
  userPhrases   UserPhrase[] 
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum Status {
  NEW
  WIP
  LEARNT
}

model UserPhrase{
  id              Int           @id @default(autoincrement())
  phrase          Phrase        @relation(fields:[phraseId], references:[id])
  phraseId        Int                   
  user            User          @relation(fields:[userId], references:[id])        
  userId          Int              
  status          Status        @default(NEW)      
  timesAttempted  Int        
  timesSeen       Int        
  timesUsed       Int     
  texts           Text[]    
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt 
}

model Text {
  id            Int             @id @default(autoincrement())
  title         String          @unique
  content       String        
  user          User            @relation(fields:[userId], references:[id])             
  userId        Int             
  userPhrases   UserPhrase[]                    
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}
